{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": ".", // ðŸ‘ˆ Add this for clarity
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // âœ… Removed "noEmit": true
    "noEmit": false // or just delete this line entirely
  },
  "include": ["src/**/*.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
